{
  "compilerOptions": {
    // …
    "rootDir": "src", // ← all your TS lives in src/
    "outDir": "dist", // ← compiled JS goes here
    // …
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  // Only compile TS under src/
  "include": ["src/**/*"],

  // Don’t pull in your frontend folder, build output, node_modules, etc.
  "exclude": [
    "node_modules",
    "dist",
    "project 18", // if that’s your frontend folder
    ".env",
    "**/*.test.ts"
  ]
}
